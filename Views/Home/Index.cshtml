@{
    ViewData["Title"] = "Home - Waltz and Whisk"; // title that appears in browser tab
}

@* Hero (big main) section *@
<section class="hero">
    <!-- button linking to all recipes page -->
    <a asp-controller="Recipes" asp-action="Index" class="btn btn-primary">Browse Recipes</a>
</section>

@* Featured recipes *@
<section class="featured">
    <h1>Featured Recipes</h1>
    <div class="recipe-grid">
        @* loop through each recipe in the FeaturedRecipes list passed from controller *@
        @foreach (var recipe in Model.FeaturedRecipes)
        {
            <div class="recipe-card">
                <img src="@recipe.ImageUrl" alt="@recipe.Title" class="recipe-card-image" />
                <div class="recipe-card-content">
                    <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id">
                        <h3>@recipe.Title</h3>
                    </a>
                    <p>@recipe.Description</p>
                </div>
            </div>
        }
    </div>
</section>

@* Recent posts *@
<section class="recent">
    <h1>Latest Creations</h1>
    <ul>
        @foreach (var recipe in Model.LatestRecipes)
        {
            <li>
                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id">
                    @recipe.Title
                </a> - @recipe.CreatedAt.ToShortDateString()
            </li>
        }
    </ul>
</section>

@* About *@
<section class="about">
    <h1>About Me</h1>
    <p>
        Welcome to Waltz And Whisk — where I share my passion for cooking, baking, 
        and sharing it with my friends and family. Here, you'll find a combination 
        of recipes that I have made my own through edits and adaptations. 
    </p>
</section>